{% extends "/home/layout.html.twig" %}

{% block content %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">{{ post['title'] }}</h1>
            {% if post['preview_text'] is not empty %}
                <p class="lead">{{ post['preview_text'] }}</p>
            {% endif %}

            {% if post['detail_picture'] is not empty %}
                <img src="{{ post['detail_picture'] }}" class="card-img-top"
                     alt="{{ post['title'] }}" style="max-height:400px;max-width:400px;">
            {% endif %}
            <hr class="my-4">
            <p>{{ post['detail_text'] }}</p>
        </div>
    </div>
{% endblock %}